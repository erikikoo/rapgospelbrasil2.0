
  <div class="artistas">
    <% if @artist_data.empty? %>
      <h5>NÃ£o exitem artistas cadastrados</h5>
    <% else %>
      <div><%= render partial: 'artist_datas/search_artist' %></div>
      <% @artist_data.each do |artist_data| %>
        <div class="item-artista">
           <% if artist_data.logo.present? %>
            <%= link_to(image_tag(artist_data.logo.url(:medium), class: 'img-thumbnail'), "/show_artista/#{artist_data.id}" ,remote: true, class: "artista-profile")  %>
           <% else %>
            <%= link_to(image_tag("ImagemArtistaSemFoto.png", with:'200px', height:'200px', class: 'img-thumbnail artista-profile' ),"/show_artista/#{artist_data.id}", remote: true) %>
           <% end %> 
           <br/>

          <div class="painel-like">           
             <% if !artist_data.like.nil? and artist_data.like.like %> 
                <%= link_to(cl_image_tag("body-img/BotCurtir.png"), "/unlike/#{artist_data.id}", remote: true) %>
              <% elsif  !artist_data.like.nil? and artist_data.like.unlike %>   
                <%= link_to(cl_image_tag("body-img/BotCurtido.png"), "/like/#{artist_data.id}/update", remote: true) %>
              <% elsif artist_data.like.nil? %>    
                <%= link_to(cl_image_tag("body-img/BotCurtido.png"), "/like/#{artist_data.id}", remote: true) %>
              <% end %>
          </div>


           <span class="text-center"> <%= artist_data.nome %> </span>
         </div>
         <% if @profile == "adm" %> 
          <%= link_to "Editar","/edit_disco/#{album.id}/adm", :class => "btn", :remote => true %>

              <%= link_to 'Apagar', "/remove_disco/#{album.id}/adm", method: :delete, :remote => true ,data: { confirm: 'Are you sure?' } , class: 'btn btn-danger'%>
        <% end %>
      <% end %>
    <% end %>  
  </div>  
<br>


