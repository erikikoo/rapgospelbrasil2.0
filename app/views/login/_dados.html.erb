

<div class="dados-login">
  <div class="logotipo">
  </div>
  <% if artist_signed_in? %>  	       
          
       <div class="btn-group controle-login">       

       
        <a class="btn btn-controle-login dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-cog"></span></a> 
        


        <ul class="dropdown-menu"> 

          <li>
            <%= link_to destroy_artist_session_path, method: :delete do %>
              <i class='glyphicon glyphicon-log-out'> Logout</i>
            <% end %>
          </li>
          <%if !current_artist.admin? %>   
              <li>
                <%= link_to principal_path do %>
                  <i class='glyphicon glyphicon-user'> Perfil</i>
