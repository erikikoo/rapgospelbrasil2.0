<div class="pag-login">
	<div class="painel-login">
		<h2>Cadastro</h2>
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form-inputs">
		    <%= f.input :email, required: true, autofocus: true, label: 'Email' %>
		    <%= f.input :password, required: true, label: 'Senha',placeholder: ("MÃ­nino de #{@minimum_password_length} caracteres" if @minimum_password_length) %>
		    <%= f.input :password_confirmation, required: true, label: 'Repita a senha' %>
		  	<p>
		  		<%= f.check_box :termo_de_uso, required: true %> <%= link_to 'Termo de uso', '/termo_de_uso', remote: true %>
		  	</p>
			 
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Cadastrar" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
		<%= link_to 'Cancelar', root_path %>

	</div>
</div>
<div id="product-modal" class="modal fade"></div>