<% if !@status.nil? %>  
    <%= alert(@status, 'Opss! Ocorreu um erro')%>  
<% end %>

<%= simple_form_for(@word, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.input :titulo, autofocus: true %>
  	<%= f.file_field(:logo) %>
    <%= f.input :texto, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'mini', :cols => 100} } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
