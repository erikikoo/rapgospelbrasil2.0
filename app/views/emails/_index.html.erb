<% if !@status.nil? %>  
    <%= alert(@status, 'Sucesso! email gravado')%>  
<% end %>
<p>
  <% if @profile == "art" %>
    <%= link_to 'Adicionar email', '/novo_email', remote: true, :class => 'btn btn-default'  %>
  <% end %>
</p>
<% if @artist_data.emails.empty? %>
  <h5>NÃ£o possui agenda cadastrado </h5>
<% else %>
  
    
    <% @artist_data.emails.each do |email| %>     
      <div class="show-info">
        <strong>Email: </strong><%= email.email %>
        <br />
        <% if @profile == "art" %>
          <%= link_to "Editar","/edit_email/#{email.id}/art", :class => "btn btn-default ", :remote => true %>

              <%= link_to 'Excluir', "/remove_email/#{email.id}/adm", method: :delete, :remote => true ,data: { confirm: 'Deseja excluir este email?' } , class: 'btn btn-danger'%>
        <% end %>
      </div>  
    <% end %>   
  
<% end %>